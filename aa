        private void stopToolStripMenuItem_Click(object sender, EventArgs e)
        {
            System.Media.SoundPlayer player;
            player = new System.Media.SoundPlayer(@"sounds\Hazyoon_naS.wav");
            player = new System.Media.SoundPlayer(@"sounds\GHORS_II_caP.wav");
            player = new System.Media.SoundPlayer(@"sounds\zhen_ong.wav");
            player = new System.Media.SoundPlayer(@"sounds\Cocktail-c1m.wav");
            player.Stop();

        }

